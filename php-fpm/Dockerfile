FROM php:8.2-fpm-alpine

# Working directory for PHP-FPM
WORKDIR /var/www/html

# Expose PHP-FPM port
EXPOSE 9000

# Optional metadata
LABEL org.opencontainers.image.title="PHP-FPM" \
      org.opencontainers.image.description="Official PHP FastCGI Process Manager image" \
      org.opencontainers.image.source="https://github.com/docker-library/php" \
      org.opencontainers.image.url="https://hub.docker.com/_/php"

